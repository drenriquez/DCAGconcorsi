        }

        .custom-pagination-btn:hover {
            background-color: #0056b3; /* Colore di sfondo al passaggio del mouse */
        }

        .active {
            background-color: #28a745; /* Colore per il pulsante attivo */
            color: white; /* Colore del testo per il pulsante attivo */
